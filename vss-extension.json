{
    "manifestVersion": 1,
    "id": "bit-tasks",
    "name": "Bit Tasks",
    "version": "0.0.20",
    "publisher": "bitdev",
    "branding": {
        "color": "#060414",
        "theme": "dark"
    },
    "public": true,
    "galleryFlags": [
        "Preview"
    ],
    "links": {
        "home": {
            "uri": "https://bit.dev"
        },
        "repository": {
            "uri": "https://github.com/bit-tasks/azure-pipelines"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/bit-tasks/azure-pipelines"
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license-terms.md"
        }
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Bit tasks for Git repositories supporting common CI/CD workflows",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "icon.png"
    },
    "screenshots": [
        {
            "path": "screenshots/screen1.png"
        },
        {
            "path": "screenshots/screen2.png"
        }
    ],
    "files": [
        {
            "path": "init"
        },
        {
            "path": "verify"
        },
        {
            "path": "tag-export"
        },
        {
            "path": "pull-request"
        }
    ],
    "contributions": [
        {
            "id": "bit-init",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "init"
            }
        },
        {
            "id": "bit-verify",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "verify"
            }
        },
        {
            "id": "bit-tag-export",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "tag-export"
            }
        },
        {
            "id": "bit-pull-request",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "pull-request"
            }
        }
    ]
}